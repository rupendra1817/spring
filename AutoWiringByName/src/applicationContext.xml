<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="company" class="com.javasportal.Company" autowire="byName">
		<property name="companyName" value="Sanghavi Infosoft Pvt. Ltd."></property>
	</bean>

	<bean id="employee" class="com.javasportal.Employee">
		<property name="employeeName" value="Rahul Sharma"></property>
	</bean>

</beans>  